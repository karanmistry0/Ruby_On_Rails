<%= form_with(model: student) do |form| %>

  <% if student.errors.any? %>
      <% student.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
  <% end %>
  <div>
    <%= form.label :name%><br>
    <%= form.text_field :name%>
  </div>
  <div>
    <%= form.label :email%><br>
    <%= form.email_field :email%>
  </div>
  <div>
    <%= form.label :age%><br>
    <%= form.text_field :age%>
  </div>
  <div>
    <%= form.label :permanent_contact_number%><br>
    <%= form.text_field :permanent_contact_number%>
  </div>
  <div>
    <%= form.label :alternate_contact_number%><br>
    <%= form.text_field :alternate_contact_number%>
  </div>
  <div>
    <%= form.label :date_of_birth%><br>
    <%= form.date_field :date_of_birth%>
  </div>
  <div>
    <%= form.label :local_address%><br>
    <%= form.text_area :local_address%>
  </div>
  <div>
    <%= form.label :permanent_address%><br>
    <%= form.text_area :permanent_address%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>